<h1>Burgers!</h1>

<div class="row">
  <div class="col">
    <img src="assets/images/burger.png" alt="burger">
  </div>
</div>

<div class="row">
  <div class="col-6 burgers">
    <h2>Uneaten:</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li class="uneaten">{{burger_name}}<button data-id="{{id}}" class="update-button btn btn-sm btn-warning">Eat it!</button><button
          data-id="{{id}}" class="delete-button btn btn-sm btn-warning">Delete</button></li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6 burgers">
    <h2>Eaten:</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li class="eaten">{{burger_name}}<button data-id="{{id}}" class="delete-button btn btn-sm btn-warning">Delete</button></li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col form-container">
    <div class="form-box">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger name:</label><br/>
        <input type="text" id="burger" name="name">
      </div>

      <button class="btn btn-sm btn-warning" type="submit">Add burger</button>
    </form>
    </div>
  </div>
</div>